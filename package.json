{
	"name": "adam-grady-portfolio",
	"version": "1.0.0",
	"description": "Personal portfolio website for Adam Grady - built with React, Vite, and custom SSG",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build --app && pnpm ssg",
		"build:environments": "vite build --app",
		"ssg": "node --import tsx scripts/ssg.ts",
		"preview": "vite preview --outDir dist/client",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"keywords": [
		"portfolio",
		"react",
		"vite",
		"ssg",
		"typescript",
		"custom-router",
		"view-transitions"
	],
	"author": "Adam Grady",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/BlueFrog130/portfolio"
	},
	"dependencies": {
		"@floating-ui/react": "^0.27.16",
		"lucide-react": "^0.559.0",
		"react": "19.3.0-canary-fd524fe0-20251121",
		"react-dom": "19.3.0-canary-fd524fe0-20251121",
		"web-vitals": "^5.1.0"
	},
	"devDependencies": {
		"@cloudflare/ai-utils": "^1.0.1",
		"@cloudflare/vite-plugin": "^1.17.0",
		"@cloudflare/workers-types": "^4.20251210.0",
		"@mdx-js/react": "^3.1.1",
